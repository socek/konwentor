{% from "table.jinja2" import table %}

{% macro header() -%}
    <tr>
        <th>Nazwa</th>
        <th>Wartość</th>
    </tr>
{%- endmacro %}

{% macro title() -%}
    Główne
{%- endmacro %}

{% macro main_table(statistics, id) %}
    {% call(stat) table(title, header, statistics, id) %}
        <tr>
            <td>{{stat['name']}}</td>
            <td>{{stat['value']}}</td>
        </tr>
    {% endcall %}
{% endmacro %}


