{% extends "head.jinja2" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-5">
                <h1 class="page-header">Konwentor</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Proszę się zalogować</h3>
                    </div>
                    {{form.error()|safe}}
                    <div class="panel-body">
                        {{form.begin()|safe}}
                            <fieldset>
                                {{form.text('email')|safe}}
                                {{form.password('password')|safe}}
                                {{form.submit('Zaloguj')|safe}}
                            </fieldset>
                        {{form.end()|safe}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
