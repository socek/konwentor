<div class="form-group">
    {%- if error %} <div class="label label-danger">{{message}}</div>{%- endif -%}
    <input
        class="form-control"
        value="{{value}}"
        placeholder="{{label}}"
        name="{{name}}"
        id="{{id}}"
        type="text"
        {%- if disabled %} disabled=disabled {% endif -%}
        {%- if autofocus %} autofocus{% endif -%}
        >
</div>
