{% macro header() -%}
    <tr>
        <th>Nazwa</th>
        <th>Ilość</th>
    </tr>
{%- endmacro %}

{% macro title() -%}Najczęściej wypożyczane gry{%- endmacro %}

{% macro games_table(statistics, id) %}
